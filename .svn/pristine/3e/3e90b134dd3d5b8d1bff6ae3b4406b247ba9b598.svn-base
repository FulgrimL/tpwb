    <script>
    	//获取渠道的id
		function GetRequest() {
		    var url = location.search; //获取url中"?"符后的字串
		    var theRequest = new Object();
		    if (url.indexOf("?") != -1) {
		        var str = url.substr(1);
		        strs = str.split("&");
		        for (var i = 0; i < strs.length; i++) {
		            theRequest[strs[i].split("=")[0]] = decodeURIComponent(strs[i].split("=")[1]);
		        }
		    }
		    return theRequest;
		}
		var PhocopyOfBusiLic;
		var customer_Id;
        var Gsuserid=localStorage.getItem("gsuserId");
		var mask = mui.createMask(function() {
            $(".mui-backdrop").html("");
        }); //callback为用户点击蒙版时自动执行的回调；
		$("#showZJ").on("click", function() {
            mask.show();
            var path=httpLocation2+"/tpwb/upload/imgs/"+PhocopyOfBusiLic;
            //$(".mui-backdrop").html('<img src="'+PhocopyOfBusiLic+'" alt="">');
            $(".mui-backdrop").html('<img src="'+path+'" alt="">');
        })


		$("#delBtn").click(function() {

			var postData1={
						customerId:customer_Id['CustomerId'],
			};
        	if(window.confirm('你确定要删除吗？'))
        	{
            	mui.ajax({
                url: httpLocation2+"/tpwb/customers/delcustomer",
                type: 'POST',
                data: JSON.stringify(postData1),
                contentType: "application/json;charset=utf-8",
                dataType: 'json',
                success: function(backdata) {
    				if(backdata.code==0)
    				{
    					alert(backdata.msg);
    					window.location.href = "customerList.html?Customer_Id="+customer_Id['CustomerId'];
    				}
                },
			})
          	}
        	else{
             	return false;
            }
        })
		$("#editBtn").click(function() {
            window.location.href = "addCustomer.html?Customer_Id="+customer_Id['CustomerId'];
        })

        $("#changeBtn").click(function() {
            window.location.href = "productEdit.html?Customer_Id="+customer_Id['CustomerId'];
        })

		//将渠道信息回填到渠道详情编辑页面
		$(function(){
			//$("#CenterofCustomer").attr("placeholder","hahaha");
			customer_Id=GetRequest();
			var customerId;
			var postData={
					customerId:customer_Id['CustomerId']
			};
            var postData1={
                customerId:customer_Id['CustomerId'],
                gsuserId:Gsuserid
            };
//			alert(document.getElementById('customer').value)
			mui.ajax({
            url: httpLocation2+"/tpwb/customers/showcustomerinfo",
            type: 'POST',
            data: JSON.stringify(postData),
            contentType: "application/json;charset=utf-8",
            dataType: 'json',
            success: function(backdata) {
                var resData = backdata.data;
    				if(backdata.code==0)
    				{
//  					alert(resData[0].password);
    					document.getElementById("CustomerName").innerHTML=resData[0].customerName;
    					$("#ContactName").attr("value",resData[0].contactName);
    					$("#ContactPhone").attr("value",resData[0].contactPhone);
    					$("#ThreeProofCode").attr("value",resData[0].threeProofCode);
    					$("#CustomerAccount").attr("value",resData[0].customerAccount);
    					PhocopyOfBusiLic=resData[0].phocopyOfBusiLic;
    				}
                },
			})

			mui.ajax({
            url: httpLocation2+"/tpwb/customers/getCustomerProducts",
            type: 'POST',
            data: JSON.stringify(postData1),
            contentType: "application/json;charset=utf-8",
            dataType: 'json',
            success: function(backdata) {
            	var resData = backdata.data;
            	var htmlStr = " ";
				for(var i in resData) {
					if (resData[i].relationId!=null&&resData[i].relationId!=""){
						htmlStr += '<li id=' + resData[i].productId + '>';
						htmlStr += '<a class="fz">' + resData[i].insurProductsName + '</a>' + '</li>' ;
					}
					
				}
				$("#productList").append(htmlStr);
                },
			})
		})
    </script>
